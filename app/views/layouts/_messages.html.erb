<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
  <br>
    <div data-alert class="alert-box <%= name.to_s == 'notice' ? 'success' : 'alert' %> small-12 medium-2 large-2 columns">
      <%= content_tag :div, msg %>
      <a href="#" class="close">&times;</a>
    </div>
  <% end %>
<% end %>
