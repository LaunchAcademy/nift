<div class='main_content'>
  <div class="product_sort_links">
    <%= link_to 'Highest Rated', products_path(sort_query: 'average_rating') %>
    <%= link_to 'Popularity', products_path(sort_query: 'reviews_count') %>
    <%= link_to 'Newest', products_path(sort_query: 'created_at') %>
    <%= link_to 'Release Date', products_path(sort_query: 'release_date') %>
  </div>

  <div class='isotope js-isotope small-centered' id='productContainer'>
    <% count = 1 %>
    <% @products.each do |product| %>
      <% if [1,8,11].include?count %>
        <a id='<%= product.price %>' class='product_image size2' href='<%= product_path(product)%>'>
          <span class="overlay tint"><%= image_tag(product.image.large, class: 'image') unless product.image.nil? %></span>
      <% else %>
        <a id='<%= product.price %>' class='product_image size1' href='<%= product_path(product)%>'>
          <span class="overlay tint"><%= image_tag(product.image.large, class: 'image') unless product.image.nil? %></span>
      <% end %>
      <% count += 1 %>
      <div class='description'>
        <p class='product_title'>Sample title <%= product.name %><span class='arrow'></span></p>
        <p class='product_details'>This is a sample description. It has more details about the product in the picture.</p>
      </div>
      </a>
    <% end %>
  </div>
  <div class='pagination'><%= paginate @products %></div>
</div>
