<div class='row'>
  <div class="product_sort_links">
    <a href="#" class="sort_link">Highest rated</a>
    <a href="#" class="sort_link">Popularity</a>
    <a href="#" class="sort_link">Newest</a>
    <a href="#" class="sort_link">Release date</a>
  </div>
</div>

<div class='product_sort'>
  <%= simple_form_for :q, url: products_path, method: :get do |f| %>
    <%= f.input :sort, collection: [['Highest rated', 'average_rating'], ['Popularity', 'reviews_count'], ['Release Date', 'release_date'], ['Newest', 'created_at']] %>
    <%= f.submit %>
  <% end %>
</div>

<div class='isotope js-isotope small-centered' id='productContainer'>
  <% count = 0 %>
  <% @products.each do |product| %>
    <% if count < 1 %>
      <a id='<%= product.price %>' class='product_image size3' href='<%= product_path(product)%>'>
        <span class="overlay tint"><%= image_tag(product.image.large, class: 'image') unless product.image.nil? %></span>
    <% else %>
      <a id='<%= product.price %>' class='product_image size2' href='<%= product_path(product)%>'>
        <span class="overlay tint"><%= image_tag(product.image.large, class: 'image') unless product.image.nil? %></span>
    <% end %>
    <% count += 1 %>
    <div class='description'>
      <p class='product_title'>Sample title <%= product.name %><span class='arrow'></span></p>
      <p class='product_details'>This is a sample description. It has more details about the product in the picture.</p>
    </div>
    </a>
  <% end %>
</div>

<div class='pagination'><%= paginate @products %></div>
